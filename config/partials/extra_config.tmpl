{
   "documentation/openapi": {
    "description": "This is the api gateway for the simfiny backend",
    "version": "1.0.0",
    "host": "simfiny.io",
    "base_path": "/v1",
    "terms_of_service": "http://url.to/tos",
    "contact_name": "yoan yomba",
    "contact_email": "yoan@simfiny.com",
    "contact_url": "https://simfiny.io/developers",
    "license_name": "MIT",
    "license_url": "https://opensource.org/licenses/MIT",
    "tags": ["platform", "fin-tech", "Restricted"],
    "schemes": [
        "http",
        "https"
    ]
   },
   "router":{
      "return_error_msg":true,
      "forwarded_by_client_ip":true,
      "disable_access_log":true
   },
   "telemetry/logging":{
      "level":"ERROR",
      "prefix":"[SIMFINY API-GATEWAY]",
      "syslog":true,
      "stdout":true
   },
   "telemetry/metrics":{
      "collection_time":"60s",
      "proxy_disabled":false,
      "router_disabled":false,
      "backend_disabled":false,
      "endpoint_disabled":false,
      "listen_address":":8081"
   },
   "security/cors":{
      "allow_origins":[
         "*"
      ],
      "allow_methods":[
         "GET",
         "HEAD",
         "POST",
         "PUT",
         "PATCH",
         "DELETE",
         "OPTIONS"
      ],
      "allow_headers":[
         "*"
      ],
    "expose_headers": [
        "Content-Length"
      ],
      "max_age":"12h"
   },
   "security/http": {
        "allowed_hosts": [],
        "ssl_redirect": true,
        "sts_seconds": 300,
        "sts_include_subdomains": true,
        "frame_deny": true,
        "referrer_policy": "same-origin",
        "custom_frame_options_value": "ALLOW-FROM https://simfiny.co",
        "hpkp_public_key": "pin-sha256=\"base64==\"; max-age=expireTime [; includeSubDomains][; report-uri=\"reportURI\"]",
        "content_type_nosniff": true,
        "browser_xss_filter": true,
        "content_security_policy": "default-src 'self';",
        "is_development": false
      }
}